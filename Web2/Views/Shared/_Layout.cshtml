@{
    Layout = "~/Views/Shared/_RootLayout.cshtml";
}
<style type="text/css">
    html
    {
        overflow: scroll;
    }
    body
    {
        margin: 0;
        padding: 0;
        border: 0;
        overflow: hidden;
        height: 100%;
        max-height: 100%;
    }
        
    #framecontent
    {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 130px; /*Height of frame div*/
        overflow: hidden; /*Disable scrollbars. Set to "scroll" to enable*/
        background-color: darkgreen;
        color: white;
    }
        
        
    #maincontent
    {
        position: fixed;
        top: 130px; /*Set top value to HeightOfFrameDiv*/
        left: 0;
        right: 0;
        bottom: 0;
        overflow: auto;
        background: gray;
    }
        
    .innertube
    {
        margin: 15px; /*Margins for inner DIV inside each DIV (to provide padding)*/
    }
        
    * html body
    {
        /*IE6 hack*/
        padding: 130px 0 0 0; /*Set value to (HeightOfFrameDiv 0 0 0)*/
    }
        
    * html #maincontent
    {
        /*IE6 hack*/
        height: 100%;
        width: 100%;
    }
        
        
    #superpanel
    {
        width: 100%;
        height: 100%;
        background-color: lightgray;
    }
</style>

